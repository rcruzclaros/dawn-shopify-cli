{% style %}
.section-footer{
    background-color:{{ section.settings.background_color }};
}
{% endstyle %}
<footer class="section-footer {{ section.settings.custom_class_section }}">
    <div class="container">
      <div class="row-grid">
        {% for block in section.blocks %}
          <div class="col col-{{ block.settings.layout }} {{ block.settings.custom_class_box }}">
            {% if block.settings.image-box != blank %}
            <a class="navbar-brand" href="{{ routes.root_url }}"><img src="{{ block.settings.image-box | img_url: 'medium' }}" alt="{{ block.settings.image.alt }}"></a>
            {% endif %}
            <h5>{{ block.settings.title-box }}</h5>
            {{ block.settings.text-box }}
            <ul class="navbar-nav ms-auto">
                {% assign navbar = block.settings.menu %}
                {% for link in navbar.links %}
                <li class="nav-item">
                    <a class="nav-link" href="{{ link.url }}">{{ link.title }}</a>
                </li>
                {% endfor %}
            </ul>
          </div>
        {% endfor %}
      </div>
      <div class="line"></div>
      {% if section.settings.text != blank %}
      <div class="paragraph-down">
        {{ section.settings.text }}
      </div>
      {% endif %}
    </div>
</footer>
  {% schema %}
    {
      "name": "Footer",
      "class": "section-footer-web",
      "settings": 
        [
          {
            "type": "richtext",
            "id": "text",
            "label": "Paragraph Down",
            "default": "<p>Your text here</p>"
          },
          {
            "type": "color",
            "id": "background_color",
            "label": "Background color"
          },
          {
            "type": "text",
            "id": "custom_class_section",
            "label": "Custom Class Section"
          }
        ],
      "blocks": [
          {
              "type": "Box",
                "name": "Add Box",
              "limit": 4,
                "settings": [
                  {
                        "type": "image_picker",
                        "id": "image-box",
                         "label": "Image Box"
                  },
                  {
                      "type": "text",
                      "id": "title-box",
                      "label": "Title Box",
                      "default": "Title Box"
                  },
                  {
                    "type": "richtext",
                    "id": "text-box",
                    "label": "Paragraph box",
                    "default": "<p>Your text here</p>"
                  },
                  {
                    "type": "link_list",
                    "id": "menu",
                    "label": "Select Menu",
                    "default": "main-menu"
                },
                  {
                    "type": "select",
                    "id": "layout",
                    "label": "Container Width",
                    "default": "2",
                    "options": [
                      {
                        "value": "4",
                        "label": "25%"
                      },
                      {
                        "value": "3",
                        "label": "33%"
                      },
                      {
                        "value": "2",
                        "label": "50%"
                      }
                    ]
                  },
                  {
                    "type": "text",
                    "id": "custom_class_box",
                    "label": "Custom classes"
                  }
              ] 
          }
       ],
      "presets": [
          {
            "name": "Footer",
            "blocks": [
              {
                  "type": "Box"
              }
            ]
          }
        ]
    }
  {% endschema %}
  
