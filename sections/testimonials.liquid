<section class="section-testimonials">
    <div class="container">
      {% if section.settings.title != blank %}
      <h2>{{ section.settings.title}}</h2>
      {% endif %}
      <div class="row-grid">
        {% for block in section.blocks %}
        <div class="col col-2 {{ block.settings.custom_class_box }}">
          {% if block.settings.video_link != blank %}
            <div class="sf-video__container">
                <div class="sf-video__wrapper">
                    <div id="video-block">
                       <iframe
                          src="https://www.youtube.com/embed/{{ block.settings.video_link.id }}"
                          frameborder="0"
                          allowfullscreen="allowfullscreen"
                       ></iframe>
                    </div>
                </div>
            </div>
          {%- endif -%}
          <div class="body-content">
            {% if block.settings.image-stars != blank %}
            <div>
                <img src="{{ block.settings.image-stars | img_url: 'large' }}" alt="{{ block.settings.image-stars.alt }}">
            </div>
            {%- endif -%}
  
            {%- if block.settings.title-testimonials != blank -%}
                <h4>{{ block.settings.title-testimonials }}</h4>
            {%- endif -%}
  
            {%- if block.settings.text-testimonials != blank -%}
                {{ block.settings.text-testimonials }}
            {%- endif -%}
  
            {%- if block.settings.author-text != blank -%}
                <span>{{ block.settings.author-text }}</span>
            {%- endif -%}
          </div>
        </div>
        {%- endfor -%}
      </div>
      {% if section.settings.text-down != blank %}
          <span>{{ section.settings.text-down }}</span>
      {% endif %}
    </div>
  </section>
  {% schema %}
    {
      "name": "Testimonials",
      "settings": 
        [
          {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Title"
          },
          {
            "type": "text",
            "id": "text-down",
            "label": "Text Down",
            "default": "Text Down"
          }
        ],
      "blocks": [
          {
              "type": "Box-testimonial",
                "name": "Add Box",
              "limit": 4,
                "settings": [
                  {
                    "type": "video_url",
                    "id": "video_link",
                    "label": "Video link",
                    "accept": [
                      "youtube"
                    ],
                    "default": "https://www.youtube.com/watch?v=_9VUPq3SxOc"
                  },
                     {
                        "type": "image_picker",
                      "id": "image-stars",
                         "label": "Image Stars"
                  },
                  {
                    "type": "text",
                    "id": "title-testimonials",
                    "label": "Title Testimonials",
                    "default": "Title Testimonials"
                  },
                  {
                    "type": "richtext",
                    "id": "text-testimonials",
                    "label": "Paragraph Testimonials",
                    "default": "<p>Your text here</p>"
                  },
                  {
                    "type": "text",
                    "id": "author-text",
                    "label": "Author Name",
                    "default": "Author Name"
                  },
                  {
                    "type": "text",
                    "id": "custom_class_box",
                    "label": "Custom classes"
                  }
              ] 
          }
       ],
      "presets": [
          {
            "name": "Testimonials",
            "blocks": [
              {
                  "type": "Box-testimonial"
              }
            ]
          }
        ]
    }
  {% endschema %}
  
  {% stylesheet %}
  {% endstylesheet %}
  
  {% javascript %}
  {% endjavascript %}
  